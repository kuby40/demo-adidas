generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


type Review {
  description String?
  stars       Int
  title       String
}

type Description {
  explanation String
  title       String
}

type Stock {
  color String
  size Float
  available Int
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  description Description
  details String[]
  gender String
  name String
  picture String
  price Float
  reviews Review[]
  stock Stock[]
  unitsSold Int
  dateAdded DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  favorites String[] @default([])
  firstName String
  lastName  String
  password  String
  role Role @default(USER)
}
